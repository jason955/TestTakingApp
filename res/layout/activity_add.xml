<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gradesapp.AddGradesActivity" >

    <Button
        android:id="@+id/addClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="96dp"
        android:onClick="addAnother"
        android:text="Add Another" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addClass"
        android:layout_alignBottom="@+id/addClass"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:onClick="button2"
        android:text="Calc" />

    <Spinner
        android:id="@+id/categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/clsName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/categories"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="Choose your category"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/addCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categories"
        android:layout_alignLeft="@+id/button2"
        android:onClick="addCat"
        android:text="Add Category" />

    <TextView
        android:id="@+id/clsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addClass"
        android:layout_below="@+id/categories"
        android:layout_marginTop="58dp"
        android:text="Add some new grades" />

    <EditText
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignRight="@+id/categories"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="ex: 15/20"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/gradeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/categoryName"
        android:layout_alignBottom="@+id/categoryName"
        android:layout_alignLeft="@+id/clsName"
        android:layout_alignRight="@+id/clsName"
        android:ems="10"
        android:hint="Name" />

</RelativeLayout>